<section class="sign sign-up">
  <h2 class="sign-title">Crear Cuenta</h2>
  <form action="/sign-up" method="post" id="signup-form">
    <div class="input-sign">
      <label for="username">Nombre de usuario:</label>
      <input type="text" id="username" name="username" required autocomplete="username" placeholder="Mínimo 4 caracteres" minlength="4">
    </div>
    <div class="input-sign">
      <label for="email">Correo electrónico:</label>
      <input type="email" id="email" name="email" required autocomplete="email" placeholder="tu@email.com">
    </div>
    <div class="input-sign">
      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="password" required autocomplete="new-password" placeholder="Mínimo 4 caracteres" minlength="4">
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}" class="input-sign">
    <input type="submit" value="Registrarse" class="btn-submit">
  </form>
  <div class="texts">
    <p>¿Ya tienes una cuenta? <a href="/sign-in">Inicia sesión aquí</a></p>
  </div>
</section>
