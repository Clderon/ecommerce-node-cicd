<section class="sign sign-in">
  <h2 class="sign-title">Iniciar Sesión</h2>
  <form action="/sign-in" method="post" id="signin-form">
    <div class="input-sign">
      <label for="email">Correo electrónico:</label>
      <input type="email" id="email" name="email" required autocomplete="email" placeholder="tu@email.com">
    </div>
    <div class="input-sign">
      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="password" required autocomplete="current-password" placeholder="Mínimo 4 caracteres">
    </div>

    <input type="hidden" name="_csrf" value="{{csrfToken}}" class="input-sign">

    <input type="submit" value="Iniciar Sesión" class="btn-submit">
  </form>

  <div class="texts">
    <p>¿No tienes una cuenta? <a href="/sign-up">Regístrate aquí</a></p>
  </div>
</section>
